    }

    .restock-advisor-panel {
        border: 1px solid rgba(89, 74, 226, 0.3);
        background: rgba(232, 234, 246, 0.4);
    }


    @@keyframes pulse {
        0% { transform: scale(0.95); box-shadow: 0 0 0 0 rgba(33, 150, 243, 0.7); }
        70% { transform: scale(1); box-shadow: 0 0 0 10px rgba(33, 150, 243, 0); }
        100% { transform: scale(0.95); box-shadow: 0 0 0 0 rgba(33, 150, 243, 0); }
    }
</style>

@code {

    
    private IEnumerable<ProductionBatch> batches = new List<ProductionBatch>();
    private IEnumerable<Truck> trucks = new List<Truck>();
    private IEnumerable<Shipment> shipments = new List<Shipment>();
    private IEnumerable<RetailLocation> retailers = new List<RetailLocation>();
    private IEnumerable<RecoveryCenter> recoveryCenters = new List<RecoveryCenter>();
    
    private ProductionBatch? selectedBatchForHierarchy;
    private int TotalProducedToday;
    private decimal TotalProfit;
    private double YieldPercent = 98.4;
    private double RecycleRate;
    private double CarbonOffset;
    private double MaterialRecoveredKg;
    private List<PredictionModel> rackAdvisories = new();




    protected override void OnInitialized()
    {
        if (!Disposed) RefreshData();
    }

    private void ViewHierarchy(ProductionBatch batch)
    {
        selectedBatchForHierarchy = batch;
    }


    private void RefreshData()
    {
        try
        {
            batches = FactoryService.GetAllBatches()?.OrderByDescending(b => b.CreatedAt) 
                      ?? Enumerable.Empty<ProductionBatch>();
            trucks = LogisticsService.GetAllTrucks() ?? Enumerable.Empty<Truck>();
            shipments = LogisticsService.GetAllShipments() ?? Enumerable.Empty<Shipment>();
            retailers = RetailService.GetAllLocations() ?? Enumerable.Empty<RetailLocation>();
            recoveryCenters = SustainabilityService.GetAllCenters() ?? Enumerable.Empty<RecoveryCenter>();
            
            TotalProducedToday = FactoryService.GetTotalProducedToday();
            TotalProfit = FactoryService.GetTotalProfit();
            RecycleRate = FactoryService.GetRecycleRate();
            CarbonOffset = FactoryService.GetCarbonOffset();
            MaterialRecoveredKg = FactoryService.GetMaterialRecoveredKg();
            
            var allRacks = retailers
                .SelectMany(r => FactoryService.GetRacksForRetail(r.Id) ?? Enumerable.Empty<RetailRack>())
                .ToList();
            rackAdvisories = PredictionService.GetRackAdvisory(allRacks);
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"[FactoryDashboard] RefreshData error: {ex.Message}");
            // Ensure collections are never null so rendering doesn't cascade-fail
            batches ??= Enumerable.Empty<ProductionBatch>();
            trucks ??= Enumerable.Empty<Truck>();
            shipments ??= Enumerable.Empty<Shipment>();
            retailers ??= Enumerable.Empty<RetailLocation>();
            recoveryCenters ??= Enumerable.Empty<RecoveryCenter>();
            rackAdvisories ??= new List<PredictionModel>();
        }
        
        SafeStateHasChanged();
    }


    private void SimulateSales()
    {
        var random = new Random();
        var allRacks = retailers.SelectMany(r => FactoryService.GetRacksForRetail(r.Id)).ToList();
        
        foreach (var rack in allRacks)
        {
            int sales = random.Next(1, 15);
            rack.CurrentUnits = Math.Max(0, rack.CurrentUnits - sales);
            // In a real app we'd update DB, but for demo UI refresh is fine
        }
        
        rackAdvisories = PredictionService.GetRackAdvisory(allRacks);
        Snackbar.Add("Simulating retail sales... Inventory updating.", Severity.Info);
        SafeStateHasChanged();
    }






    private async Task ExportCsv()
    {
        var bytes = ReportingService.GenerateProductionCsv();
        await DownloadFile("production_report.csv", bytes);
    }

    private async Task ExportLedger()
    {
        var bytes = ReportingService.GenerateIndustrialLedgerCsv();
        await DownloadFile("industrial_ledger_12layers.csv", bytes);
        Snackbar.Add("12-Layer Industrial Ledger Exported.", Severity.Success);
    }


    private async Task ExportPdf()
    {
        var bytes = PdfReportService.GenerateProductionReport();
        await DownloadFile("factory_production_summary.pdf", bytes);
    }

    private async Task DownloadManifest(int shipmentId)
    {
        var bytes = ManifestGenerator.GenerateManifest(shipmentId);
        await DownloadFile($"Manifest_S{shipmentId}_{DateTime.Now:yyyyMMdd}.pdf", bytes);
        Snackbar.Add("Logistics Manifest Exported.", Severity.Info);
    }


    private async Task DownloadFile(string fileName, byte[] bytes)
    {
        using var stream = new MemoryStream(bytes);
        using var streamRef = new DotNetStreamReference(stream);
        await JSRuntime.InvokeVoidAsync("downloadFileFromStream", fileName, streamRef);
    }
    
    private void NavigateBack()
    {
        NavigationManager.NavigateTo("/roles");
    }
}

