@page "/login/wholesaler"
@using PackTrack.Components.Layout
@layout LandingLayout

<PageTitle>Wholesaler Login - PackSight</PageTitle>

<div class="d-flex justify-center align-center" style="height: 100vh; background: linear-gradient(135deg, #E3F2FD 0%, #BBDEFB 100%);">
    <MudContainer MaxWidth="MaxWidth.Small">
        <MudCard Elevation="25" Class="rounded-xl pa-8" Style="backdrop-filter: blur(10px); background: rgba(255,255,255,0.95);">
             <div class="d-flex flex-column align-center mb-8">
                <MudAvatar Color="Color.Info" Size="Size.Large" Style="height: 90px; width: 90px; font-size: 3rem;" Class="mb-4 shadow-lg">üè™</MudAvatar>
                <MudText Typo="Typo.h4" Style="font-weight: 800; color: #1976D2;">Wholesaler Hub</MudText>
                <MudText Typo="Typo.subtitle1" Color="Color.Secondary" Style="font-weight: 500;">Bulk Distribution Center</MudText>
            </div>
            
            <MudForm>
                <MudTextField T="string" Label="Distributor ID" Variant="Variant.Outlined" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Storefront" Class="mb-4" />
                <MudTextField T="string" Label="Location" Variant="Variant.Outlined" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.LocationOn" Class="mb-6" />
                
                <MudButton Variant="Variant.Filled" Color="Color.Info" Size="Size.Large" FullWidth="true" Class="py-3 rounded-lg shadow-md" Href="/dashboard" Style="font-weight: bold;">
                    Access Inventory
                </MudButton>
            </MudForm>
            
             <MudDivider Class="my-6"/>
            
            <div class="d-flex justify-center">
                 <MudLink Href="/roles" Color="Color.Dark" Underline="Underline.Hover" Class="d-flex align-center gap-1">
                    <MudIcon Icon="@Icons.Material.Filled.ArrowBack" Size="Size.Small"/> Change Role
                </MudLink>
            </div>
        </MudCard>
    </MudContainer>
</div>
