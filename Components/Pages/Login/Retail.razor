@page "/login/retail"
@using PackTrack.Components.Layout
@layout LandingLayout

<PageTitle>Retail Login - PackSight</PageTitle>

<div class="d-flex justify-center align-center" style="height: 100vh; background: linear-gradient(135deg, #E8F5E9 0%, #C8E6C9 100%);">
    <MudContainer MaxWidth="MaxWidth.Small">
        <MudCard Elevation="25" Class="rounded-xl pa-8" Style="backdrop-filter: blur(10px); background: rgba(255,255,255,0.95);">
             <div class="d-flex flex-column align-center mb-8">
                <MudAvatar Color="Color.Success" Size="Size.Large" Style="height: 90px; width: 90px; font-size: 3rem;" Class="mb-4 shadow-lg">üõçÔ∏è</MudAvatar>
                <MudText Typo="Typo.h4" Style="font-weight: 800; color: #2E7D32;">Retail Login</MudText>
                <MudText Typo="Typo.subtitle1" Color="Color.Secondary" Style="font-weight: 500;">Shop Inventory & Sales</MudText>
            </div>
            
            <MudForm>
                <MudTextField T="string" Label="Shop Name" Variant="Variant.Outlined" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Store" Class="mb-4" />
                <MudTextField T="string" Label="City" Variant="Variant.Outlined" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.LocationCity" Class="mb-6" />
                
                <MudButton Variant="Variant.Filled" Color="Color.Success" Size="Size.Large" FullWidth="true" Class="py-3 rounded-lg shadow-md" Href="/dashboard" Style="font-weight: bold;">
                    Open POS System
                </MudButton>
            </MudForm>
            
             <MudDivider Class="my-6"/>
            
            <div class="d-flex justify-center">
                 <MudLink Href="/roles" Color="Color.Dark" Underline="Underline.Hover" Class="d-flex align-center gap-1">
                    <MudIcon Icon="@Icons.Material.Filled.ArrowBack" Size="Size.Small"/> Change Role
                </MudLink>
            </div>
        </MudCard>
    </MudContainer>
</div>
